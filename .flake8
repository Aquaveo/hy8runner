[flake8]
max-line-length = 120
docstring-convention = google
import-order-style = appnexus
application-package-names = FhwaVariable, FhwaVariableFileIO, HydraulicSandboxGUI
application-import-names = HydraulicSandboxCalc
count = True
banned-modules = osgeo.* = Use the xmsgdal library instead.
force_sort_within_sections = true
# E226 missing whitespace around arithmetic operator
# BugBear Errors
# B007 Loop control variable
# DocString Errors
# D102	Missing docstring in public method
# D202	No blank lines allowed after function docstring
# D208 Docstring is over-indented
# D209 Multi-line docstring closing quotes should be on a separate line
# D210 No whitespaces allowed surrounding docstring text
# D214 Section is over-indented
# D400 First line should end with a period
# D403 First word of the first line should be properly capitalized
# D415	First line should end with a period, question mark, or exclamation point
# D417 missing argument descriptions in the docstring
select = E226, B006, B007, B020,  D102, D202, D205, D208, D209, D210, D214, D300, D400, D402, D403, D405, D415, D417, I100, I101, N802, N803, N806, N816, E123, E126, E128, E225, E251, E302, E402, E501, E703, E741, E999, W504, F401, F821, F823, F841
